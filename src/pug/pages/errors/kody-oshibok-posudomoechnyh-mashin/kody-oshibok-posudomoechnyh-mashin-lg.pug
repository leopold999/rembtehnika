extends ../../../layout/article_page_layout.pug

block variables
  - var title = 'Коды ошибок посудомоечных машин LG'
  - var content = "Расшифровка ошибок посудомоечных машин LG"
  - var pathToImgArticles = domen + '/assets/img/pictures/errors-img/'

block content
  +bread-crumbs({ 
    'Главная': '/',
    "Коды ошибок бытовой техники": "/errors/",
    "Коды ошибок посудомоечных машин": "/errors/kody-oshibok-posudomoechnyh-mashin/",
    "Коды ошибок посудомоечных машин LG" : ""
  })
  .errors-page.article-page-wrapper(itemscope itemtype="https://schema.org/Article")
    H1(itemprop="name")= title
    +pageBanner-1({
      title: 'Нужна консультация?',
      text: 'Мы ответим на все Ваши вопросы и рассчитаем стоимость ремонта',
      buttonText: 'Заказать звонок',
      pathToImg: domen + '/assets/img/pictures/banner-img-001.webp'
    })
    .page-text(itemprop="articleBody")
      .table-container_scroll
        table(border='1')
          tbody
            tr
              th
                p Код ошибки
              th
                p Описание ошибки
            tr
              td
                p ОЕ
              td
                p Нет слива воды
            tr
              td
                p IE
              td
                p Не поступает вода
            tr
              td
                p Е1
              td
                p Сработал автоматический слив, возможно утечка воды
            tr
              td
                p FE
              td
                p Превышение уровня воды
            tr
              td
                p НЕ
              td
                p Ошибка нагрева
            tr
              td
                p tE
              td
                p Ошибка термистора
            tr
              td
                p LE
              td
                p Неисправность двигателя
            tr
              td
                p СЕ
              td
                p Произошла разгерметизация моечной камеры
            tr
              td
                p PF
              td
                p Нет напряжения в электросети или оно периодически пропадает

      h2 Сообщения на дисплее
      .table-container_scroll
        table(border='1')
          tbody
            tr
              th
                p Cd
              th
                p Сообщение о включении дополнительной "холодной сушки
            tr
              td
                p CL
              td
                p Включена защита от детей
            tr
              td
                p F
              td
                p Сообщается о том, что в данный момент датчик измеряет мутность воды
            tr
              td
                p Число
                p 1-19
              td
                p Показывает время отложенного запуска
            tr
              td
                p Звуковой
                p сигнал
              td
                p Предупреждение при открытии дверцы после цикла с высокой температурой

        

  .calc-banner.page-banner
    .page-banner-img
      img(class='page-banner-img__pct' src= domen + '/assets/img/pictures/calculator.webp' alt="качественный ремонт посудомоечных машин с гарантией")
    .page-banner-content
      .page-banner-content__title 
        p 100% качественный ремонт посудомоечных машин на дому!
      .page-banner-content__text 
        p Свяжитесь с нами по телефонам  
        a(href=telNumber_1_int)= telNumber_1 
        |  или 
        a(href=telNumber_2_int)= telNumber_2 
        |  и мы проконсультируем Вас о стоимости ремонта Вашей техники
      .page-banner-content__text Также Вы можете оформить on-line заявку или заказать обратный звонок
      .page-banner-content-buttons
        .page-banner-button.button-order 
          | Оформить заявку
          br
          | on-line
        .page-banner-button.button-callback Заказать звонок

